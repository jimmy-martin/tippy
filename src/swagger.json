{
  "swagger": "2.0",
  "info": {
    "title": "TIPPY API",
    "version": "1.0.0",
    "description": "Documentation of an Tippy Open Source API that allows restaurant owners to manage tips and redistribute them fairly."
  },
  "paths": {
    "/users": {
      "get": {
        "tags": ["Users"],
        "summary": "Get all users",
        "description": "Get all users",
        "operationId": "getUsers",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/User"
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Users"],
        "summary": "Add a new user",
        "description": "Add a new user",
        "operationId": "addUser",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "User object that needs to be added",
            "required": true,
            "schema": {
              "required": ["firstname", "lastname", "status"],
              "properties": {
                "firstname": {
                  "type": "string"
                },
                "lastname": {
                  "type": "string"
                },
                "status": {
                  "type": "boolean"
                }
              }
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "firstname": {
                    "type": "string"
                  },
                  "lastname": {
                    "type": "string"
                  },
                  "status": {
                    "type": "boolean"
                  }
                },
                "required": ["firstname", "lastname", "status"]
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "required": ["firstname", "lastname", "status"],
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "firstname": {
          "type": "string"
        },
        "lastname": {
          "type": "string"
        },
        "balance": {
          "type": "number",
          "format": "float"
        },
        "status": {
          "type": "boolean",
          "description": "User position (false = kitchen, true = service)"
        },
        "active": {
          "type": "boolean",
          "description": "User status (false = inactive, true = active)"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "modified_at": {
          "type": "string",
          "format": "date-time"
        },
        "shifts": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Shift"
          }
        },
        "payments": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Payment"
          }
        }
      }
    },
    "Tip": {
      "type": "object",
      "required": ["amount", "id_table", "id_shift"],
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "amount": {
          "type": "number",
          "format": "float"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "modified_at": {
          "type": "string",
          "format": "date-time"
        },
        "id_table": {
          "type": "integer",
          "format": "int64"
        },
        "user": {
          "$ref": "#/definitions/User"
        },
        "id_shift": {
          "type": "integer",
          "format": "int64"
        },
        "shift": {
          "$ref": "#/definitions/Shift"
        }
      }
    },
    "Payment": {
      "type": "object",
      "required": ["amount", "id_user"],
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "amount": {
          "type": "number",
          "format": "float"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "modified_at": {
          "type": "string",
          "format": "date-time"
        },
        "id_user": {
          "type": "integer",
          "format": "int64"
        },
        "user": {
          "$ref": "#/definitions/User"
        }
      }
    },
    "Shift": {
      "type": "object",
      "required": ["type", "id_user", "id_table"],
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "type": {
          "type": "string",
          "description": "Shift type (0 = day, 1 = night)"
        },
        "is_closed": {
          "type": "boolean",
          "default": false
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "modified_at": {
          "type": "string",
          "format": "date-time"
        },
        "users": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/User"
          }
        },
        "tips": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Tip"
          }
        }
      }
    },
    "Table": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "modified_at": {
          "type": "string",
          "format": "date-time"
        },
        "tips": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Tip"
          }
        }
      }
    },
    "Admin": {
      "type": "object",
      "required": ["pincode"],
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "pincode": {
          "type": "string"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "modified_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  },
  "responses": {},
  "parameters": {},
  "securityDefinitions": {},
  "tags": [],
  "schemes": ["http"],
  "produces": ["application/json"]
}
